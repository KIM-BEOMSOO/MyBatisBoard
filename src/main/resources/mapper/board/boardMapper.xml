<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.example.myBatisBoard.repository.board.BoardRepository">
    <!--비회원 게시판 게시글 전체출력-->
    <select id="getAllGuestPosts" resultType="GuestPost">
        SELECT * FROM guestPosts
        ORDER BY id DESC
    </select>

    <!-- 비회원 게시글 쓰기 -->
    <insert id="createGuestPost" parameterType="GuestPost">
        INSERT INTO guestPosts (guestPostTitle, guestPostContent, guestPostPw)
        VALUES (#{guestPostTitle}, #{guestPostContent}, #{guestPostPw})
    </insert>

    <!--비회원 게시글 상세보기-->
    <select id="getGuestPostById" resultType="GuestPost">
        SELECT * FROM guestPosts
        WHERE id = #{id}
    </select>


</mapper>